	journal = {International Journal of STD \& AIDS},
	author = {Lindan, Christina P. and Anglemyer, Andrew and Hladik, Wolfgang and Barker, Joseph and Lubwama, George and Rutherford, George and Ssenkusu, John and Opio, Alex and Campbell, James},
